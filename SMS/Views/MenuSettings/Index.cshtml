
@model SMS.Models.ViewModel.MenuRoleVM


@section styles{

    @Styles.Render("~/bundles/dataTableStyle")
    @Styles.Render("~/bundles/pageStyle")   
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h4>View Menu Settings
        </h4>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">                       
                        <a class="btn btn-info" href="@Url.Action("Add","MenuSettings")" >                            
                            <i class="fa fa-plus"></i>
                            AddNew
                        </a>
                    </div>
                    <!-- form start -->
                    <form id="frmRoles" class="form-horizontal">
                        <div class="box-body ">
                            <div class="form-group  ">
                                <div class="pull-left col-sm-2">
                                    <label for="inputEmail3" class=" control-label">
                                        Select Role</label>
                                </div>

                                <div class="col-sm-4 pull-left">
                                    @Html.DropDownListFor(model => model.RoleId
                                            , Model.RoleList
                                            , ""
                                            , new { @class = "form-control select2", @id = "ddlRoles" })                                    
                                    @Html.ValidationMessageFor(model => model.RoleId)                                    
                                </div>
                            </div>
                        </div>

                    </form>

                    <div class="box-body ">
                        <table class="table table-bordered table-striped " id="dataTableMenuRole"
                               data-url="@Url.Action("LoadGridView", "MenuSettings")">
                            <thead>
                                <tr>
                                    <th style="">MenuName </th>
                                    <th style="">Add</th>
                                    <th style="">Edit</th>
                                    <th style="">Delete</th>
                                    <th style="">View</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th style="">MenuName </th>
                                    <th style="">Add</th>
                                    <th style="">Edit</th>
                                    <th style="">Delete</th>
                                    <th style="">View</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>


                    </div>
                    <!-- /.box-body -->


                    <div class="modal fade" id="editMenuSettings" data-url="@Url.Action("Edit","MenuSettings")">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">                                    
                                    <h4 class="modal-title">Edit Menu Settings</h4>
                                </div>
                                <div class="modal-body">
                                    
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left btn-modal btnEdit" data-dismiss="modal">Close</button>
                                    <button id="btnEditSubmit" type="button" class="btn btn-primary btn-modal btnEdit">Save changes</button>
                                    <div class="pull-right spinner"  style="display:none">                                       
                                        '<i class="fa fa-refresh fa-spin spin-small "></i>
                                    </div>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- /.modal -->
                    <div class="box-footer col-md-12">
                    </div>
                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- Default box -->
    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->
@section scripts{

    @Scripts.Render("~/bundles/dataTableScript")
    @Scripts.Render("~/bundles/pageScript")    
    <script src="~/Scriptz/MenuSettings/Index.js"></script>

}
