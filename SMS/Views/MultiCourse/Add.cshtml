@model SMS.Models.ViewModel.MultiCourseVM

@{
    ViewBag.Title = "Add";
}

@section styles{
    @Styles.Render("~/bundles/pageStyle")
  

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h4>
            Add Multiple Courses
        </h4>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <a class="btn btn-info" href="@Url.Action("Index", "MultiCourse")">
                            <i class="fa  fa-hand-o-left"></i>
                            Back
                        </a>
                    </div>
                    <!-- form start -->
                    <form id="frmAdd" class="form-horizontal" data-url="@Url.Action("Add", "MultiCourse")">
                        @Html.AntiForgeryToken()
                        <div class="box-body ">
                            <div class=" form-group ">
                                <div class=" pull-left col-sm-2">
                                    <label for="ddlCourseType" class=" control-label">
                                        Course Type
                                    </label>
                                </div>
                                <div class="col-sm-4 pull-left">
                                    @Html.DropDownListFor(m => m.CourseTypeId
                                            , Model.CourseTypeList
                                            , ""
                                            , new { @class = "form-control select2 courseList", @id = "ddlCourseType" })
                                    @Html.ValidationMessageFor(m => m.CourseTypeId)
                                </div>
                                <div class="pull-left spinner col-sm-4 " style="display:none">
                                    <i class="fa fa-refresh fa-spin spin-small "></i>
                                </div>
                            </div>
                            <div class=" form-group ">
                                <div class=" pull-left col-sm-2">
                                    <label for="ddlCourseSeries" class=" control-label">
                                        Course Series
                                    </label>
                                </div>
                                <div class="col-sm-4 pull-left">
                                    @Html.DropDownListFor(m => m.CourseSeriesId
                                            , Model.CourseSeriesList
                                            , ""
                                            , new { @class = "form-control select2 courseList ", @id = "ddlCourseSeries" })
                                    @Html.ValidationMessageFor(m => m.CourseSeriesId)
                                </div>
                                <div class="pull-left spinner col-sm-4 " style="display:none">
                                    <i class="fa fa-refresh fa-spin spin-small "></i>
                                </div>
                            </div>
                            <div class="form-group  ">
                                <div class="pull-left col-sm-2" >
                                    <label for="txtCourseCode" class=" control-label">
                                        Course Code
                                    </label>
                                </div>

                                <div class="col-sm-4 pull-left" id="divCourseCode" data-url="@Url.Action("GetCourseCode", "MultiCourse")">
                                    @Html.TextBoxFor(m => m.MultiCourse.CourseCode,
                                                     new { @class = "form-control", @placeholder = "Course Code", @id = "txtCourseCode",@readonly=true })
                                  
                                </div>
                            </div>
                            <div class="form-group  ">
                                <div class="pull-left col-sm-2">
                                    <label for="txtPrevCourseCode" class=" control-label">
                                        Previous Course Code
                                    </label>
                                </div>

                                <div class="col-sm-4 pull-left" >
                                    @Html.TextBoxFor(m => m.MultiCourse.OldCourseCode,
                                                     new { @class = "form-control", @placeholder = "Previous Course Code", @id = "txtPrevCourseCode" })                                   
                                </div>
                            </div>
                            <div class=" form-group ">
                                <div class=" pull-left col-sm-2">
                                    <label for="ddlCourseTitle" class=" control-label">
                                        Course Title
                                    </label>
                                </div>
                                <div class="col-sm-4 pull-left" id="divCourseTitle" data-url="@Url.Action("FillCourseTitle", "MultiCourse")">
                                    @Html.DropDownListFor(m => m.CourseSubTitleId
                                                        , Model.CourseSubTitleList
                                                        , ""
                                                        , new { @class = "form-control select2", @id = "ddlCourseTitle" })
                                    @Html.ValidationMessageFor(m => m.CourseSubTitleId)

                                </div>
                            </div>
                            <div class=" form-group ">
                                <div class=" pull-left col-sm-2">
                                    <label for="inputEmail3" class=" control-label">
                                        Multiple Courses
                                    </label>
                                </div>
                                <div class="col-sm-4 pull-left">
                                    @Html.ListBoxFor(m => m.MultipleCourseId
                                                        , Model.MultipleCourseList                                                        
                                                        , new { @class = "form-control select2", @id = "ddlCourseMultiple",@multiple="multiple" })
                                    @Html.ValidationMessageFor(m => m.MultipleCourseId)

                                </div>
                            </div>
                            <div class="form-group  ">
                                <div class="pull-left col-sm-2">
                                    <label for="txtCourseDuration" class=" control-label">
                                        Course Duration
                                    </label>
                                </div>

                                <div class="col-sm-4 pull-left">
                                    @Html.TextBoxFor(m => m.MultiCourse.Duration,
                                                              new { @class = "form-control", @placeholder = "Course Duration", @id = "txtCourseDuration", @readonly = true })
                                   
                                </div>
                            </div>
                            <div class="form-group  ">
                                <div class="pull-left col-sm-2">
                                    <label for="txtSingleFee" class=" control-label">
                                        Course Fee
                                    </label>
                                </div>

                                <div class="col-sm-4 pull-left">
                                    @Html.TextBoxFor(m => m.MultiCourse.SingleFee,
                                                     new { @class = "form-control", @placeholder = "Course Fee", @id = "txtSingleFee", @readonly = true })
                                   
                                </div>
                            </div>
                            <div class="form-group  ">
                                <div class="pull-left col-sm-2">
                                    <label for="txtInstallmentFee" class=" control-label">
                                        Installment Fee
                                    </label>
                                </div>

                                <div class="col-sm-4 pull-left">
                                    @Html.TextBoxFor(m => m.MultiCourse.InstallmentFee,
                                                     new { @class = "form-control", @placeholder = "Installment Fee", @id = "txtInstallmentFee", @readonly = true })
                                   
                                </div>
                            </div>

                        </div>
                        <div class="box-footer col-md-12">
                            <button type="submit" id="btnSubmit" class="btn btn-info pull-left ">
                                <i class="fa  fa-save"></i>
                                Save
                            </button>
                            <button type="submit" id="btnCancel" class="btn btn-default pull-left" style="margin-left: 10px">
                                <i class="fa  fa-undo"></i>
                                Cancel
                            </button>
                        </div>
                        <!-- /.box-footer -->
                    </form>
                    <!-- form end -->                  

                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- Default box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/pageScript")
    <script src="~/Scriptz/MultiCourse/Add.js"></script>
}


