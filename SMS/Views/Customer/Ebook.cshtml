@model SMS.Models.ViewModel.CustomerIndexVM

@{
    ViewBag.Title = "Add";
}

@section styles{
    @Styles.Render("~/bundles/pageStyle")

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h4>
            E-WorkBook Download
        </h4>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">E-WorkBook Download</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">            

            <div class="col-md-6">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Course Details</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table no-margin">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Course Name</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.StudentFeedback.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                @(i + 1)
                                            </td>
                                            <td>
                                                @Model.StudentFeedback[i].Course.Name
                                            </td>
                                            @*if course has text to download*@
                                            @if (Model.StudentFeedback[i].Course.CourseDownloadUrl != null)
                                            {
                                                <td>
                                                    <a class="btn btn-primary pull-left btn-xs btnDownload" href="@Url.Action("EbookDownload", new { courseId = Model.StudentFeedback[i].Course.Id })"
                                                       data-download-url="@Model.StudentFeedback[i].Course.CourseDownloadUrl" style="margin-right: 5px;">
                                                        <i class="fa fa-download"></i> Download
                                                    </a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <small class="label label-warning"><i class="fa fa-clock-o"></i>NO TEXT AVAILABLE</small>
                                                </td>
                                            }
                                           
                                        </tr>

                                    }

                                </tbody>



                            </table>
                        </div><!-- /.table-responsive -->
                    </div><!-- /.box-body -->
                    <div class="box-footer clearfix" style="height:20px">

                    </div><!-- /.box-footer -->
                </div>

                <!-- /.box -->
            </div>
        </div>
        <!-- Default box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/pageScript")
   
}

