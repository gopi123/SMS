@model SMS.Models.ViewModel.StudentImageVM

@{
    ViewBag.Title = "Index";
}

@section styles{
    @Styles.Render("~/bundles/pageStyle")
    @Styles.Render("~/bundles/dataTableStyle")

}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="col-md-12">
            <h4>
                View Student Image Details
            </h4>
        </div>        
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">                 
                    <div class="box-header">
                        <div class="col-md-3">
                            <div class="form-group">
                                <div>
                                    <label for="ddlInstallmentNo" class=" control-label">
                                        Select Photo Mode
                                    </label>

                                </div>
                                <div>
                                    @(Html.DropDownList("ddlPhotoModeList", Model.PhotoModeList, new { @style = "width:100%" }))
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3" style="display:none" id="divFinYear">
                            <div class="form-group">
                                <div>
                                    <label for="ddlInstallmentNo" class=" control-label">
                                        Financial Year
                                    </label>

                                </div>
                                <div>
                                    @(Html.DropDownList("ddlFinYearList", Model.FinancialYearList, new { @style = "width:100%" }))
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3" style="display:none" id="divMonth">
                            <div>
                                <label for="ddlInstallmentNo" class=" control-label">
                                    Select Month
                                </label>
                            </div>
                            <div>
                                @Html.DropDownListFor(m => m.MonthName, Model.MonthList, new { @style = "width:100%", @id = "ddlMonth" })
                            </div>

                        </div>
                    </div>
                    <!-- form start -->
                    <form id="frmIndex" class="form-horizontal" data-redirect-url="@Url.Action("Add", new { RegId = "param1_placeholder" })"  >
                        <!-- /.box-body -->
                        <div class="box-body">
                            <table class="table table-bordered table-striped dTable" style="margin-top:0px;overflow:auto" data-url="@Url.Action("GetDataTable")">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Registration No </th>
                                        <th>Student Name </th>                                       
                                        <th>Status</th>                                       
                                        <th></th>


                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="box-footer col-md-12">
                        </div>
                        <!-- /.box-footer -->
                    </form>

                    <!-- /.modal -->
                    <div class="box-footer col-md-12">
                    </div>
                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- Default box -->
    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->
@section scripts{
    @Scripts.Render("~/bundles/pageScript")
    @Scripts.Render("~/bundles/dataTableScript")
    <script src="~/Scriptz/StudentImage/Index.js"></script>
}