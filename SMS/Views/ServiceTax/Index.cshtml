@model SMS.Models.ServiceTax

@{
    ViewBag.Title = "Index";
}

@section styles{
    @Styles.Render("~/bundles/pageStyle")
    @Styles.Render("~/bundles/dataTableStyle")

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h4>
            Add Service Tax
        </h4>

    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <a class="btn btn-info" href="@Url.Action("Add","ServiceTax")">
                            <i class="fa  fa-plus"></i>
                            AddNew
                        </a>
                    </div>
                    <!-- form start -->
                    <form id="frmIndex" data-url="@Url.Action("Index","ServiceTax")" data-delete-url="@Url.Action("Delete","ServiceTax")" class="form-horizontal">
                        <!-- /.box-body -->
                        <div class="box-body ">
                            <table class="table table-bordered table-striped dTable" data-url="@Url.Action("GetDataTable", "ServiceTax")">
                                <thead>
                                    <tr>
                                        <th style="">Name </th>
                                        <th style="">Percentage</th>
                                        <th style="">FromDate</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="box-footer col-md-12">

                        </div>
                        <!-- /.box-footer -->
                    </form>
                    <div class="modal fade" id="divModalEdit" data-url="@Url.Action("Edit", "ServiceTax")">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Edit Service Tax</h4>
                                </div>
                                <div class="modal-body">

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left btn-modal btnEdit" data-dismiss="modal">Close</button>
                                    <button id="btnEditSubmit" type="button" class="btn btn-primary btn-modal btnEdit">Save changes</button>
                                    <div class="pull-right spinner" style="display:none">
                                        '<i class="fa fa-refresh fa-spin spin-small "></i>
                                    </div>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- /.modal -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- Default box -->
    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->
@section scripts{
    @Scripts.Render("~/bundles/pageScript")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/dataTableScript")
    @Scripts.Render("~/bundles/moment")
    <script src="~/Scriptz/ServiceTax/Index.js"></script>
}


