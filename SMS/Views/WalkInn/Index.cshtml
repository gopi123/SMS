@model SMS.Models.ViewModel.IndexVM

@{
    ViewBag.Title = "Index";
}

@section styles{
    @Styles.Render("~/bundles/pageStyle")
    @Styles.Render("~/bundles/dataTableStyle")

}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="col-md-12">
            <h4>
                View WalkInn Details
            </h4>
        </div>
        <div class="box-header">
            <a class="btn btn-info" href="@Url.Action("Add", "WalkInn")">
                <i class="fa fa-plus"></i>
                AddNew
            </a>
        </div>
        
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">  
                    <div class="box-header">
                        <div class="col-md-3">
                            <div class="form-group">
                                <div>
                                    <label for="ddlInstallmentNo" class=" control-label">
                                        Financial Year
                                    </label>
                                   
                                </div>
                                <div>
                                    @(Html.DropDownList("ddlFinYearList", Model.FinancialYearList, new { @style = "width:100%" }))
                                </div>
                            </div>
                            
                        </div>
                        <div class="col-md-3">
                            <div>
                                <label for="ddlInstallmentNo" class=" control-label">
                                    Student Type
                                </label>                               
                            </div>
                            <div>
                                @(Html.DropDownList("ddlStudType", Model.StudentTypeList, new {@style="width:100%" }))
                            </div>
                           
                        </div>
                        <div class="col-md-3">
                            <div>
                                <label for="ddlInstallmentNo" class=" control-label">
                                    Select Month
                                </label>
                            </div>
                            <div>
                                @Html.DropDownListFor(m => m.MonthName, Model.MonthList, new { @style = "width:100%", @id = "ddlMonth" })
                                @*@(Html.DropDownList("ddlMonth", Model.MonthList, new { @style = "width:100%" }))*@
                            </div>

                        </div>
                    </div>                  
                  
                    <!-- form start -->
                    <form id="frmIndex" data-url="@Url.Action("Index", "WalkInn")" class="form-horizontal" data-delete-url="@Url.Action("Delete", "WalkInn")"
                          data-redirect-url="@Url.Action("Edit", "WalkInn", new { walkInnId = "param1_placeholder" })" data-register-url="@Url.Action("Add", "Registration", new { walkInnId = "param1_placeholder" })">
                        <!-- /.box-body -->
                        <div class="box-body ">
                            <table class="table table-bordered table-striped dTable" style="margin-top:0px;overflow:auto" data-url="@Url.Action("GetDataTable", "WalkInn")">
                                <thead>
                                    <tr>
                                        <th>WIDate</th>
                                        <th>Centre </th>
                                        <th>Sales Person </th>
                                        <th>Student Name</th>
                                        <th>Mobile</th>
                                        <th>Parent Number</th>
                                        <th>Course Recommended</th>
                                        <th>Exp:JoinDate</th>
                                        <th></th>

                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="box-footer col-md-12">
                        </div>
                        <!-- /.box-footer -->
                    </form>
                    <div class="modal fade" id="divModalEdit" data-url="@Url.Action("Edit", "MultiCourse")">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Registration Details</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="box-body ">
                                        <div class=" form-group col-md-12">
                                            <div class=" pull-left ">
                                                <label for="ddlCourseType" class=" control-label">
                                                    Student Name
                                                </label>
                                            </div>
                                            <div>
                                                <input type="text" class="form-control" id="mdlStudentName" readonly="readonly" style="background-color:white">
                                            </div>
                                        </div>
                                        <div class=" form-group col-md-12">
                                            <div class=" pull-left ">
                                                <label for="ddlCourseType" class=" control-label">
                                                    Student Email
                                                </label>
                                            </div>
                                            <div>
                                                <input type="text" class="form-control" id="mdlStudentEmail" readonly="readonly" style="background-color:white">
                                            </div>
                                        </div>
                                        <div class=" form-group col-md-12">
                                            <div class=" pull-left ">
                                                <label for="ddlCourseType" class=" control-label">
                                                    Student PhoneNo
                                                </label>
                                            </div>
                                            <div>
                                                <input type="text" class="form-control" id="mdlStudentPhoneNo" readonly="readonly" style="background-color:white">
                                            </div>
                                        </div>
                                        <div class=" form-group col-md-12" style="display:none">
                                            <div class=" pull-left ">
                                                <label for="ddlCourseType" class=" control-label">
                                                    Student Id
                                                </label>
                                            </div>
                                            <div>
                                                <input type="text" class="form-control" id="mdlStudentId" readonly="readonly" style="background-color:white">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left btn-modal btnEdit" data-dismiss="modal">Close</button>
                                    <button id="btnContinue" type="button" class="btn btn-success btn-modal btnEdit">Continue</button>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- /.modal -->
                    <div class="box-footer col-md-12">
                    </div>
                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- Default box -->
    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->
@section scripts{
    @Scripts.Render("~/bundles/pageScript")   
    @Scripts.Render("~/bundles/dataTableScript")
    <script src="~/Scriptz/WalkInn/Index.js"></script>
}